/* Navigation */

nav
{
    display: inline-block;
	width:100%;
	text-align:center;
	position: middle;
	text-transform: uppercase;
	font-family: "Gill Sans MT",serif;
	background-color: orange;
	
}


nav a
{
  font-size: 0.9em;
	font-weight:bold;
	text-decoration: none;
	color: white;
}

nav > ul
{
	list-style-type: none;
	margin-top: 5px;
	position: middle;
	margin-left:100px;
	padding: 0px;
	position:relative;
}
nav > ul > li
{
	margin: 0px;
	padding: 20px 0px;
}

.menu::after
{
	content: "";
	display: block;
	clear: both;
}

nav > ul > li > a
{
	color:white;
	padding: 25px 25px;
}

nav > ul > li > a:hover
{
	padding :22px 22px 22px 22px;
}

nav li:hover .submenu
{
	display:inline-block;
	position:absolute;
	top:100%;
	margin:auto;
	left:-75%;
	z-index:1000;
}
nav  > ul > li
{
	float: left;
	position: relative;
}
.submenu
{
	display: none;
}

.submenu li
{
	border-bottom: 3px solid #CCC;
	list-style-type:none;
	padding:0px 0px;
	width: 150%;
}
.submenu li a
{
	font-family:"Times New Roman", serif;
	padding: 0px 0px;
	font-size: 13px;
	color: gray;
}

